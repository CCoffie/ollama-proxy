# .env.example file for ollama-auth-proxy configuration
# Copy this file to .env and fill in your values.

# ---- REQUIRED ----
# Set a strong, secret token for managing user tokens
ADMIN_TOKEN=replace_with_strong_secret_token

# ---- Network Configuration ----
# Port Nginx will listen on (directly exposed on the host due to network_mode: host)
NGINX_PORT=8081

# ---- Container Configuration ----
# Internal port for the Node.js authentication service (accessed via localhost)
INTERNAL_AUTH_PORT=3000
